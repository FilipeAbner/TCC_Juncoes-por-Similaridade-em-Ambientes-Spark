# .env
# Worker
SPARK_MODE=worker

# Para mesma máquina: use hostname spark-master (resolvido automaticamente pelo Docker)
SPARK_MASTER_URL=spark://spark-master:7077

# Para máquinas diferentes: SUBSTITUA pelo IP REAL da máquina do Master
# Exemplo: SPARK_MASTER_URL=spark://192.168.1.100:7077
# E adicione extra_hosts no docker-compose.yml:
#   extra_hosts:
#     - "spark-master:192.168.1.100"
# IMPORTANTE: Use o MESMO IP configurado no SPARK_MASTER_HOST do Master

#SPARK_WORKER_CORES=2
#SPARK_WORKER_MEMORY=2g
#SPARK_WORKER_PORT=7078
SPARK_WORKER_WEBUI_PORT=8081
