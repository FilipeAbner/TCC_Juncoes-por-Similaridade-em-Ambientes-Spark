# .env
# Worker
SPARK_MODE=worker

# Para mesma máquina: use spark-master e comente SPARK_MASTER_IP
# Para máquinas diferentes: use IP REAL da máquina do Master
# Exemplo: SPARK_MASTER_URL=spark://192.168.1.3:7077
SPARK_MASTER_URL=spark://192.168.1.3:7077
SPARK_MASTER_HOST=spark-master
SPARK_MASTER_IP=192.168.1.3

# ⚠️ IMPORTANTE: Para multi-máquina, substitua pelo IP REAL desta máquina worker!
# Este IP será usado para comunicação entre workers durante shuffle
# Exemplo Worker 1: SPARK_LOCAL_IP=192.168.1.10
# Exemplo Worker 2: SPARK_LOCAL_IP=192.168.1.11
SPARK_LOCAL_IP=SUBSTITUA_PELO_IP_DESTA_MAQUINA

# Recursos do Worker (descomente para limitar)
#SPARK_WORKER_CORES=2
#SPARK_WORKER_MEMORY=2g
#SPARK_WORKER_PORT=7078
SPARK_WORKER_WEBUI_PORT=8081
